@model IEnumerable<FastFood.Models.Coupon>
@{
    ViewData["Title"] = "Coupon List";
}

<div class="container mt-4">
    <div class="text-center mb-4">
        <h2 class="text-primary">Coupon List</h2>
        <a asp-action="Create" class="btn btn-light">
            <i class="bi bi-plus-circle"></i> Create New Coupon
        </a>
    </div>

    <div class="row">
        @foreach (var obj in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow border-0">
                    <img src="@obj.CouponImage" alt="@obj.Title" class="card-img-top" style="height: 200px; object-fit: cover;" />
                    <div class="card-body">
                        <h5 class="card-title">@obj.Title</h5>
                        <p class="card-text">
                            <strong>Type:</strong> @obj.Type <br />
                            <strong>Discount:</strong> @obj.Discount% <br />
                            <strong>Minimum Amount:</strong> @obj.MinimumAmount <br />
                            <strong>Is Active:</strong> @(obj.IsActive ? "Yes" : "No")
                        </p>
                        <div class="d-flex justify-content-between">
                            <a asp-controller="Coupon" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-warning">
                                <i class="bi bi-pencil-fill"></i> Edit
                            </a>
                            <a asp-controller="Coupon" asp-action="Delete" asp-route-id="@obj.Id" data-id="@obj.Id" class="btn btn-danger js-delete">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="~/js/coupon.js" asp-append-version="true"></script>
}
