@model IEnumerable<FastFood.Models.Coupon>

<div class="container">
    <div class="row pt-4 pb-3 ">
        <div class="col-6">
            <h2 class="text-primary">
                Coupon List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New
            </a>

        </div>
    </div>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Type</th>
                <th>Discount</th>
                <th>Minimum Amount</th>
                <th>Coupon Image</th>
                <th>IsActive</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.Id</td>
                    <td>@obj.Title</td>
                    <td>@obj.Type</td>
                    <td>@obj.Discount</td>
                    <td>@obj.MinimumAmount</td>
                    <td>@obj.CouponImage</td>
                    <td>@obj.IsActive</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Coupon" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-controller="Coupon" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>