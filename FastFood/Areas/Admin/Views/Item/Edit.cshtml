@model FastFood.Models.ViewModels.ItemVM

@{
    ViewData["Title"] = "Edit Item";
}

<div class="container mt-4">
    <h1 class="mb-4">Edit Item</h1>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <form asp-action="Edit" enctype="multipart/form-data">
                <input asp-for="Item.Id" hidden />
                <input asp-for="Item.ImageUrl" hidden />

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="Item.Title" class="form-label"></label>
                    <input asp-for="Item.Title" class="form-control" />
                    <span asp-validation-for="Item.Title" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Item.Description" class="form-label"></label>
                    <textarea asp-for="Item.Description" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Item.Description" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Item.Price" class="form-label"></label>
                    <input asp-for="Item.Price" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="Item.Price" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Item.CategoryId" class="form-label"></label>
                    <select asp-for="Item.CategoryId" class="form-select" asp-items="Model.CategoryList">
                        <option disabled selected>--Select Category--</option>
                    </select>
                    <span asp-validation-for="Item.CategoryId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Item.SubCategoryId" class="form-label"></label>
                    <select asp-for="Item.SubCategoryId" class="form-select" asp-items="Model.SubCategoryList">
                        <option disabled selected>--Select Sub Category--</option>
                    </select>
                    <span asp-validation-for="Item.SubCategoryId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Item.ImageUrl" class="form-label"></label>
                    <input asp-for="Item.ImageUrl" type="file" name="file" class="form-control" />
                </div>

                <div class="form-group mb-3">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}