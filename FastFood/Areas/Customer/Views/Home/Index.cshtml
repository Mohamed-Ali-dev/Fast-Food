@model IEnumerable<Item>

<div class="row pb-3">
    @foreach (var item in Model)
    {
        <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
            <div class="card border-0 shadow border-top border-5 rounded">
                <div class="card-img-top-wrapper" style="height: 250px; overflow: hidden;">
                    @if (item.ItemImages != null && item.ItemImages.Count() > 0)
                    {
                        <img src="@item.ItemImages.FirstOrDefault().ImageUrl" class="card-img-top w-100 h-100" style="object-fit: cover;" />
                    }
                    else
                    {
                        <img src="https://placehold.co/500x600/png" class="card-img-top w-100 h-100" style="object-fit: cover;" />
                    }
                </div>
                <div class="card-body pb-0">
                    <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">
                        @item.Title
                    </p>
                    <p class="card-title text-warning text-center mb-0">Category: @item.Category.Title</p>
                    <p class="card-title text-warning text-center mb-0">SubCategory: @item.SubCategory.Title</p>
                    <p class="text-dark text-opacity-75 text-center">
                        <span>Price: @item.Price.ToString("c")</span>
                    </p>
                </div>
                <div>
                    <a asp-controller="Home" asp-action="Details" asp-route-itemId="@item.Id" class="btn btn-primary bg-gradient border-0 form-control">
                        Details
                    </a>
                </div>
            </div>
        </div>
    }
</div>
